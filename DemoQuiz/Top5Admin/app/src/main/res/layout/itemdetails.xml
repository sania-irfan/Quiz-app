<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="16dp">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageView1"
                android:layout_height="100dp"
                android:layout_width="100dp"
                app:riv_border_width="10dp"
                app:riv_border_color="?attr/colorPrimary"
                android:src="@drawable/hamburger2"
                android:scaleType="centerCrop"
                app:riv_corner_radius="100dip"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burger King"
                    android:textColor="#000000"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Restaurant"
                    android:textColor="#000000"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="sania.irfan"
                    android:textSize="15dp" />
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:textColor="#000000"
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_margin="16dp"
            android:paddingBottom="20dp"
            android:text="BURGERRRSSSSSSSSSSSSSSSSSS sssssssssssssssssssssssssss sssssssssssssssssssss sssssssssssssssss sssssssssssssss sssssssssssssssssssssss ssssssss" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/rounded_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yummy"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/rounded_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="burger"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_image"
                android:textColor="@color/colorPrimary"
                android:padding="5dp"/>
            <TextView
                android:textColor="@color/colorPrimary"
                android:background="@drawable/rounded_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="delicious"
                android:textSize="15sp"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:focusableInTouchMode="false"
            android:weightSum="100"
            android:orientation="vertical">

            <Button
                android:id="@+id/accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:text="Accept"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/decline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:text="Decline"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>